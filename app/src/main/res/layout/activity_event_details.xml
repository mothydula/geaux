<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventDetails">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:fontFamily="@font/circular_std_med"
        android:padding="10dp"
        android:id="@+id/description_in_details"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:padding="10dp"
            android:fontFamily="@font/circular_std_med"
            android:id="@+id/date_in_details" />
    <Button
        style="@android:style/Widget.Button"
        android:fontFamily="@font/circular_std_med"
        android:background="@drawable/rounded_button"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change date"
        android:onClick="showDatePickerDialog"
        android:id="@+id/change_date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/circular_std_med"
            android:id="@+id/time_in_details"/>
    <Button
        style="@android:style/Widget.Button"
        android:fontFamily="@font/circular_std_med"
        android:background="@drawable/rounded_button"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change time"
        android:onClick="showTimePickerDialog"
        android:id="@+id/change_time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        style="@android:style/Widget.Button"
        android:fontFamily="@font/circular_std_med"
        android:background="@drawable/rounded_button"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:onClick="getFlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show flight details"/>
        <Button
            style="@android:style/Widget.Button"
            android:fontFamily="@font/circular_std_med"
            android:background="@drawable/rounded_button"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:id="@+id/remove_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove event"/>
    </LinearLayout>
</LinearLayout>