<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Itinerary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/itinerary_title"
            android:text="your itinerary"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:padding="10dp"
            android:fontFamily="@font/circular_std_med"/>

        <Button
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:onClick="editItinerary"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/circular_std_med"
            android:text="edit"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular_std_med"
            android:padding="10dp"
            android:text="playlist"
            android:textColor="@color/black"
            android:textSize="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="weather outlook: decent"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:padding="10dp"
            android:id="@+id/weather_outlook"
            android:fontFamily="@font/circular_std_med"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/itinerary_items_outer_container"
        android:orientation="vertical">

    </LinearLayout>
    <Button
        style="@android:style/Widget.Button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/circular_std_med"
        android:text="add event"
        android:id="@+id/add_event_button"
        android:onClick="addEvent"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        />
</LinearLayout>