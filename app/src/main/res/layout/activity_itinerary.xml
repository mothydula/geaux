<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Itinerary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/itinerary_title"
            android:text="your itinerary"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:padding="10dp"
            android:fontFamily="@font/circular_std_med"/>

        <Button
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:onClick="editItinerary"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/circular_std_med"
            android:text="edit"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="weather: decent"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="10dp"
            android:id="@+id/weather_outlook"
            android:fontFamily="@font/circular_std_med"/>
            <EditText
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:fontFamily="@font/circular_std_med"
                android:hint="zip code"
                android:id="@+id/zip_code_input"
                android:textSize="20dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="go"
                android:textColor="@color/black"
                android:background="@drawable/rounded_button"
                android:onClick="getWeather"
                android:textSize="15dp"
                android:fontFamily="@font/circular_std_med"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/itinerary_items_outer_container"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal">
        <Button
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/circular_std_med"
            android:text="share"
            android:id="@+id/send_itin_button"
            android:onClick="openContacts"
            android:padding="5dp"
            android:layout_margin="10dp"
            />
        <Button
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/circular_std_med"
        android:text="add event"
        android:id="@+id/add_event_button"
        android:onClick="addEvent"
            android:padding="5dp"
        android:layout_margin="10dp"
        />
    </LinearLayout>
</LinearLayout>